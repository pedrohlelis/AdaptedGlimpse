@using Glimpse.ViewModels;
@model BoardVM;

<section>
  <div class="text-white d-flex align-items-center">

    <box-icon size="30px" name='objects-vertical-top' type='solid' color='#f6f6f6'></box-icon>

    <div class="ps-2">
      <button class="btn fw-bold btn-secondary dropdown-toggle board-title-btn" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
        <h2 style="font-family: Fixture-Expanded-SemiBold;">@Model.Board.Name</h2>
      </button>
      <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
        @foreach(var board in Model.Board.Project.Boards) {
          <li><a class="dropdown-item" asp-action="GetBoardInfo" asp-controller="Board" asp-route-id="@board.Id">@board.Name</a></li>
        }
        <div class="dropdown-divider" style="background-color: rgb(160, 160, 160);"></div>
        <li><a class="dropdown-item" asp-action="Create" asp-controller="Board" asp-route-id="@Model.Board.Project.Id">Criar quadro +</a></li>
      </ul>
    </div>

    <div class="d-flex justify-content-center align-content-center align-items-end my-2 ps-2">
      <box-icon size="24px" class="mx-2" name='hard-hat' data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Cargos" type='solid' color="white" id="project-roles-btn" style="cursor: pointer;"></box-icon>
      <box-icon size="24px" class="mx-2" name='bell' data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Notificações" style="cursor: pointer;" color="white"></box-icon>
      <box-icon size="24px" class="mx-2" name='purchase-tag' color="white" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Tags" style="cursor: pointer;" onclick="openTagsModal()"></box-icon>
      <box-icon size="24px" class="mx-2" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Membros" name="group" color="white" id="member-side-menu-btn" style="cursor: pointer;" onclick="ToggleMemberSideBar()"></box-icon>
    </div>
  </div>
  <div class="mt-4">
    <button id="add-lane-button" class="fs-6 new-lane-btn text-white">
      <box-icon class="pe-2" size="20px" name='right-arrow-circle' color='#fcfcfc' ></box-icon>
      Nova Raia
    </button>
  </div>
</section>
<style>
  .board-title-btn {
    background-color: #131313;
    outline: none;
    border: none;
    display: flex;
    gap: 3px;
    margin: 0;
    padding: 0;
    padding-right: 8px;
    align-items: center;
  }
  .board-title-btn:hover {
    background-color: #a642f3;
  }
  .board-title-btn:focus {
    background-color: #a642f3;
  }
</style>
