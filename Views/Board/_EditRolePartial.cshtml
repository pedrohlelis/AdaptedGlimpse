<div class="modal fade h-75" id="rolesModal" tabindex="-1" aria-labelledby="rolesModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="rolesModalLabel">Project Roles</h5>
                <button type="button" class="btn-close bg-light" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (Model.UserRole != null && (Model.UserRole.CanManageRoles || Model.ProjectResponsibleUser.Id == Model.User.Id)) {
                    <button class="button-success" onclick="createRole()">
                        <div class="d-flex justify-content-center">
                            <img class="px-1" src="/Icons/plusIcon.svg" alt="">  
                            <p class="px-1 m-0">Novo Cargo</p>
                        </div>
                    </button>
                }else{
                    <button class="button-success" onclick="createRole()">
                        <div class="d-flex justify-content-center">
                            <img class="px-1" src="/Icons/plusIcon.svg" alt="">  
                            <p class="px-1 m-0">Novo Cargo</p>
                        </div>
                    </button>
                }
                <div class="overflow-y">
                    <ul class="list-group">
                    @foreach(var role in Model.ProjectRoles)
                    {
                        <li data-id="@role.Id"
                            data-name="@role.Name"
                            data-description="@role.Description"
                            data-Color="@role.Color"
                            data-mng-members="@role.CanManageMembers"
                            data-mng-roles="@role.CanManageRoles"
                            data-mng-cards="@role.CanManageCards"
                            data-mng-tags="@role.CanManageTags"
                            data-mng-checklist="@role.CanManageChecklist"
                        class="list-group-item d-flex justify-content-between align-items-center text-white" style="background-color: #1E1E1E;">
                            @role.Name
                            <div>
                                @if (Model.UserRole != null && (Model.UserRole.CanManageRoles || Model.ProjectResponsibleUser.Id == Model.User.Id)) {
                                    <button type="button" class="btn btn-primary btn-sm" onclick="editRole(this)">Edit</button>
                                    <button type="button" class="btn btn-danger btn-sm" onclick="deleteRole(this)">Delete</button>
                                }else {
                                    <button type="button" class="btn btn-primary btn-sm" onclick=""><box-icon type='solid' name='lock' color="white"></box-icon>Edit</button>
                                    <button type="button" class="btn btn-danger btn-sm" onclick=""><box-icon type='solid' name='lock' color="white"></box-icon>Delete</button>
                                }
                            </div>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

