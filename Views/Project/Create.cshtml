@model Project
@{
    ViewData["Title"] = "Criar Projeto";
}

<section>
    <form asp-action="CreateProject" asp-controller="Project" method="post">
        <div class="row">
            <div class="col-lg-12">

                <div class="form-group">
                    <label asp-for="ProjectName"></label>
                    <input asp-for="ProjectName" type="text" class="form-control" required/>
                </div>

                <div class="form-group">
                    <label asp-for="ProjectDescription"></label>
                    <input asp-for="ProjectDescription" type="text" class="form-control" required"/>
                </div>

                <div class="form-group">
                    <label for="projectImg"></label>
                    <input id="projectImg" name="projectImg" type="file" accept="image/png, image/jpeg" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="ProjectPicture"></label>
                    <input asp-for="ProjectPicture" type="text" class="form-control"/>
                </div>

                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>

                <div class="card-footer">
                    <center>
                        <button type="submit" class="btn-primary">Criar Projeto</button>
                        <button class="btn-secondary"><a asp-action="MainProjects" asp-controller="Project">Cancelar</a></button>
                    </center>
                </div>
            </div>
        </div>
    </form>
</section>