@model Role
@{
    //List<Project> projects = List<Project> ViewData["projects"];
}

<form asp-action="CreateRole" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Titulo do Cargo:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label asp-for="Description">Descrição do Cargo:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>

        <label asp-for="Color">Cor de Exibição:</label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>

        <label asp-for="Hierarchy">Poder:</label>
        <select asp-for="Hierarchy" class="form-control">
            <option value="3">Ver - Editar - Comandar</option>
            <option value="2">Ver - Editar</option>
            <option value="1">Ver</option>
        </select>
        <span asp-validation-for="Hierarchy" class="text-danger"></span>


        

    </div>
    
    <!-- Add other fields as needed -->

    <button type="submit" class="btn btn-primary">Create Role</button>
</form>